@inject IJSRuntime JS
@inject NavigationManager NavigationManager
@using Newtonsoft.Json
@using UehInternFrontend

@code {
    protected string? Role = "";
    protected string? Name = "";
    protected string? Email = "";

    private async Task GetData()
    {
        string token = await JS.InvokeAsync<string>("userInfo");
        string json = AES.DecryptData(token);

        if (!string.IsNullOrEmpty(json))
        {
            User? user = JsonConvert.DeserializeObject<User>(json);
            Name = user.Name;
            Email = user.Email;
            Role = user.Role;
            StateHasChanged();
        }
    }

    private string? roleScreen = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await GetData();

            if (Role == "admin"){
                roleScreen = "Admin";
            }
            else if (Role == "teacher"){
                roleScreen = "Giảng viên hướng dẫn";
            }
            else if (Role == "student"){
                roleScreen = "Sinh viên";
            }
            else 
                roleScreen = Role;
                @* roleScreen = "Không xác định"; *@

            StateHasChanged();
            await JS.InvokeVoidAsync("navLinksClick");

        }
    }

    private async Task UserLogout()
    {
@using Newtonsoft.Json
        await JS.InvokeVoidAsync("userLogout");
        NavigationManager.NavigateTo("/");
    }

}

