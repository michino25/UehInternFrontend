@page "/sinhvien/danhsach"
@using UehInternFrontend.Components
@using System.Net.Http.Headers
@using Newtonsoft.Json

@inject IJSRuntime JS
@inject HttpClient Http
@inject IConfiguration Configuration

@code{

    public string? api;
    protected override void OnInitialized()
    {
        api = Configuration["apiBackend"];
    }
    private DotModel dot = new DotModel();
    private int page = 1;
    private int itemsPerPage = 15;

    private long maxFileSize = long.MaxValue;
    private int maxAllowedFiles = int.MaxValue;
    List<SinhvienModel>? sinhviens = new List<SinhvienModel>();

    protected override async Task OnInitializedAsync()
    {
        await RenderDatas();
    }

    private async Task RenderDatas()
    {
        dot = await KiemtraDot();
        var result = await GetDssvByKhoa("CNTTKD");
        if (result != null )
        {
            sinhviens = result;
            StateHasChanged();
        }
        else
        {
            await JS.InvokeVoidAsync("alert", "Sinh viên không được tìm thấy.");
        }
    }
    private async Task<List<SinhvienModel>> GetDssvByKhoa(string makhoa)
    {
        var response = await Http.GetAsync(api + $"Sinhvien/dssv?makhoa={makhoa}");
        if (response.IsSuccessStatusCode)
        {
            var content = await response.Content.ReadAsStringAsync();
            var uploadModel = JsonConvert.DeserializeObject<List<SinhvienModel>>(content);
            return uploadModel;
        }
        else
        {
            Console.WriteLine($"Lỗi khi truy xuất sinh viên: {response.StatusCode}");
            return null;
        }
    }

    private async Task<DotModel> KiemtraDot()
    {
        var response = await Http.GetAsync(api + $"Dot");
        if (response.IsSuccessStatusCode)
        {
            var content = await response.Content.ReadAsStringAsync();
            var uploadModel = JsonConvert.DeserializeObject<DotModel>(content);
            return uploadModel;
        }
        else
        {
            Console.WriteLine($"Lỗi khi truy xuất dot: {response.StatusCode}");
            return null;
        }
    }
    private async Task OnInputFileChange(InputFileChangeEventArgs e)
    {
        var files = e.GetMultipleFiles(maxAllowedFiles);
        string makhoa = "CNTTKD";
        string madot = "DOT001";
        using var content = new MultipartFormDataContent();

        foreach (var file in files)
        {
            var fileContent = new StreamContent(file.OpenReadStream(maxFileSize));
            fileContent.Headers.ContentType = new MediaTypeHeaderValue(file.ContentType);

            content.Add(fileContent, "formFile", file.Name);
        }


        var apiUrl = api + $"Sinhvien/formFile?madot={madot}&makhoa={makhoa}";
        var response = await Http.PostAsync(apiUrl, content);
        if (!response.IsSuccessStatusCode)
        {
            await JS.InvokeVoidAsync("alert", "File not found.");
        }
        response.EnsureSuccessStatusCode();
        RenderDatas();
    }

    private async Task ChangePage(int status)
    {
        int totalPages = (int)Math.Ceiling((double)sinhviens.Count / itemsPerPage);

        if (status==-1 && page > 1) page--;
        if (status==1 && page < totalPages) page++;
        StateHasChanged();
    }


    private async Task<GiangvienRequest> GetThongTinSinhVien(string magv)
    {
        var response = await Http.GetAsync(api + $"Giangvien/GetThongtinGiangvien?magv={magv}");
        if (response.IsSuccessStatusCode)
        {
            var content = await response.Content.ReadAsStringAsync();
            var uploadModel = JsonConvert.DeserializeObject<GiangvienRequest>(content);
            return uploadModel;
        }
        else
        {
            Console.WriteLine($"Không tìm thấy : {response.StatusCode}");
            return null;
        }
    }

    private bool addBtn = false;
    private bool deleteBtn = false;
    @* private GiangvienRequest thongtinchitietgv = new GiangvienRequest(); *@

    private async void modelBtnClick(int btn, string data = "")
    {
        switch (btn)
        {
            case 1:
                addBtn = true;
                break;
            case 2:
                deleteBtn = true;
                @* thongtinchitietgv  = await GetThongTinGiangvien(data); *@
                break;
        }
        StateHasChanged();
    }

    private async Task closeBtn()
    {
        addBtn = false;
        deleteBtn = false;
        StateHasChanged();
    }

    private string keyword;

    private async Task SubmitSearch()
    {
        var response = await Http.GetAsync(api + $"Sinhvien/Search?keyword={keyword}");
        if (response.IsSuccessStatusCode)
        {
            var content = await response.Content.ReadAsStringAsync();
            var uploadModel = JsonConvert.DeserializeObject<List<SinhvienModel>>(content);
            sinhviens = uploadModel;
        }
        else
        {
            Console.WriteLine($"Không tìm thấy : {response.StatusCode}");
        }
        

    }

}

