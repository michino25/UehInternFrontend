@page "/dangky"
@using UehInternFrontend.Components

@code {
    @* public string loaihinh = "HKDN"; *@
    public string loaihinh = "KLTN";

    private async Task ChangeType()
    {
        loaihinh = loaihinh == "HKDN" ? "KLTN" : "HKDN";
    }

}

<PageTitle>Đăng ký</PageTitle>

<CheckUserComponent CheckRole="sinhvien">
    <ItemContent>

    <button 
        @onclick="() => ChangeType()" 
        class="text-white mb-3 bg-teal-700 hover:bg-teal-800 focus:ring-4 focus:ring-teal-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" type="submit">
        Thay đổi // demo
    </button>


    <div class="p-4 mb-4 bg-white border border-gray-200 rounded-lg shadow-sm 2xl:col-span-2  sm:p-6">
        @if (loaihinh == "HKDN") {
            <h3 class="mb-4 text-xl font-semibold">Đăng ký thực tập doanh nghiệp</h3>
        } else {
            <h3 class="mb-4 text-xl font-semibold">Đăng ký khóa luận tốt nghiệp</h3>
        }

            <div class="grid grid-cols-6 gap-6">
                <div class="col-span-6 sm:col-span-3">
                    <label for="email" class="block mb-2 text-sm font-medium text-gray-900">
                        Email
                    </label>
                    <input type="email"  name="email" id="email" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full py-2.5 px-4" required>
                </div>

                <div class="col-span-6 sm:col-span-3">
                    <label for="phone" class="block mb-2 text-sm font-medium text-gray-900">
                        Số điện thoại
                    </label>
                    <input type="text"  name="phone" id="phone" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full py-2.5 px-4" required>
                </div>

            @if (loaihinh == "HKDN") {

                <div class="col-span-6 sm:col-span-3">
                    <label for="name-cty" class="block mb-2 text-sm font-medium text-gray-900">
                        Tên công ty
                    </label>
                    <input type="text" name="name-cty" id="name-cty" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full py-2.5 px-4" required>
                </div>

                <div class="col-span-6 sm:col-span-3">
                    <label for="position" class="block mb-2 text-sm font-medium text-gray-900">
                        Vị trí thực tập
                    </label>
                    <input type="text" name="position" id="position" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full py-2.5 px-4" required>
                </div>

                <div class="col-span-6 sm:col-span-3">
                    <label for="website" class="block mb-2 text-sm font-medium text-gray-900">
                        Website công ty
                    </label>
                    <input type="text" name="website" id="website" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full py-2.5 px-4" required>
                </div>

                <div class="col-span-6 sm:col-span-3">
                    <label for="name-hd" class="block mb-2 text-sm font-medium text-gray-900">
                        Tên người hướng dẫn
                    </label>
                    <input type="text" name="name-hd" id="name-hd" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full py-2.5 px-4" required>
                </div>

                <div class="col-span-6 sm:col-span-3">
                    <label for="position-hd" class="block mb-2 text-sm font-medium text-gray-900">
                        Chức vụ người hướng dẫn
                    </label>
                    <input type="text" name="position-hd" id="position-hd" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full py-2.5 px-4" required>
                </div>

                <div class="col-span-6 sm:col-span-3">
                    <label for="email-hd" class="block mb-2 text-sm font-medium text-gray-900">
                        Email người hướng dẫn
                    </label>
                    <input type="email"  name="email-hd" id="email-hd" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full py-2.5 px-4" required>
                </div>

                <div class="col-span-6 sm:col-span-3">
                    <label for="phone-hd" class="block mb-2 text-sm font-medium text-gray-900">
                        Số điện thoại người hướng dẫn
                    </label>
                    <input type="text"  name="phone-hd" id="phone-hd" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full py-2.5 px-4" required>
                </div>

            } else {

                <div class="col-span-6 sm:col-span-3">
                    <label for="detai" class="block mb-2 text-sm font-medium text-gray-900">
                        Đề tài
                    </label>
                    <input type="text"  name="detai" id="detai" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full py-2.5 px-4" required>
                </div>

            }

                <div class="col-span-6 sm:col-full">
                    <button 
                        @* @onclick="() => SubmitGiangvien(makhoa)"  *@
                        class="text-white bg-teal-700 hover:bg-teal-800 focus:ring-4 focus:ring-teal-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" type="submit">
                        Lưu thông tin
                    </button>
                </div>
            </div>
    </div>


    </ItemContent>
</CheckUserComponent>

